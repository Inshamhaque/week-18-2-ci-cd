generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String
  posts    Posts[]
}

model Posts {
  id        String   @id @default(uuid())
  title     String
  content   String
  published Boolean  @default(false)
  authorId  String
  date      DateTime @default(now()) @db.Date
  author    Users    @relation(fields: [authorId], references: [id])
}
